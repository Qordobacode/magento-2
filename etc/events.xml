<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="cms_page_delete_after">
        <observer name="qordoba_connector_after_delete_page" instance="Qordoba\Connector\Observer\AfterDeleteContent" />
    </event>
    <event name="cms_block_delete_after">
        <observer name="qordoba_connector_after_delete_block" instance="Qordoba\Connector\Observer\AfterDeleteContent" />
    </event>
    <event name="catalog_product_delete_after">
        <observer name="qordoba_connector_after_delete_product" instance="Qordoba\Connector\Observer\AfterDeleteContent" />
    </event>
    <event name="catalog_category_delete_after">
        <observer name="qordoba_connector_after_delete_category" instance="Qordoba\Connector\Observer\AfterDeleteContent" />
    </event>
    <event name="catalog_entity_attribute_delete_after">
        <observer name="qordoba_connector_after_delete_attribute" instance="Qordoba\Connector\Observer\AfterDeleteContent" />
    </event>
    <event name="qordoba_preferences_save_after">
        <observer name="qordoba_connector_after_save_preference" instance="Qordoba\Connector\Observer\AfterSavePreference" />
    </event>
</config>
